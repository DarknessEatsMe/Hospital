
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]</title>
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,800;1,800&display=swap" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css2?family=Montserrat:ital@0;1&display=swap" rel="stylesheet">
	@RenderSection("Styles", false)
	<style>
		.container {
			display: flex;
			justify-content: left;
			align-items: center;
			column-gap: 10px;
			font-family: "Montserrat", sans-serif;
			font-optical-sizing: auto;
			font-weight: 800;
			font-style: normal;
			padding: 20px 0 25px 25px;
			
		}
		.nav-a {
			text-decoration: none;
			font-size: 20pt;
			color: darkblue;
		}

		.nav-a:hover {
			color: dodgerblue;
		}

		.nav-a:visited {
			text-decoration: none;
			color: darkblue;
		}

		.nav-a:visited:hover {
			text-decoration: none;
			color: dodgerblue;
		}

		.hr {
			height: 6px;
			border-radius: 10px;
			border: none;
			background: linear-gradient(45deg, darkblue, dodgerblue);
		}

	</style>
</head>
<body>
	<div class="container">
		<img style="width: 40px;height:40px" src="~/img/health.png" />
		<a class="nav-a" asp-action="Index" asp-controller="Home">Главная</a>
	</div>
	<hr class="hr"/>
	<div>
		@RenderBody()
	</div>
	@RenderSection("Scripts", false)
</body>
</html>